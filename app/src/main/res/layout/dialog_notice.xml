<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="whc.com.whc_wallet.SplashActivity">

    <RelativeLayout
        android:layout_width="888px"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginTop="170px">

        <ImageView
            android:id="@+id/noticeIv"
            android:layout_width="144px"
            android:layout_height="144px"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30px"
            android:background="@drawable/create_icon_security" />

        <TextView
            android:id="@+id/titleTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="239px"
            android:gravity="center"
            android:text="注意事项"
            android:textColor="#ff0a1f44"
            android:textSize="54px" />


        <LinearLayout
            android:id="@+id/noticeTextLy"
            android:layout_width="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_height="wrap_content"
            android:layout_marginTop="388px"
            android:orientation="vertical">

        </LinearLayout>

        <Button
            style="@style/normalBtn"
            android:layout_below="@+id/noticeTextLy"
            android:layout_marginTop="65px"
            android:text="I Know" />


    </RelativeLayout>

</RelativeLayout>
