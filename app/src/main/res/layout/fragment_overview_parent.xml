<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:background="@android:color/white"
    android:orientation="vertical">

    <RadioGroup
        android:layout_width="590px"
        android:id="@+id/tabRadioGroup"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_vertical"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_marginTop="57px"
        android:background="@drawable/tab_nor_all"
        >

        <RadioButton
            android:id="@+id/overAllBtn"
            android:layout_width="295px"
            android:layout_height="65px"
            android:background="@drawable/radio_tab"
            android:button="@null"
            android:gravity="center"
            android:text="@string/overview_all"
            android:textColor="#0C66FF"
            android:textSize="42px" />

        <RadioButton
            android:id="@+id/overCrowdBtn"
            android:layout_width="295px"
            android:layout_height="65px"
            android:background="@drawable/radio_tab_right"
            android:button="@null"
            android:gravity="center"
            android:text="@string/overview_valiad_crowd"
            android:textColor="#0C66FF"
            android:textSize="42px" />

    </RadioGroup>

    <EditText
        android:id="@+id/searchBox"
        style="@style/searchBox"
        android:layout_marginTop="220px"
        android:layout_centerHorizontal="true"
        android:layout_width="960px"
        android:layout_height="96px" />

    <ImageView
        android:id="@+id/searchIv"
        android:layout_marginTop="220px"
        android:src="@drawable/browse_icon_search"
        android:layout_alignParentRight="true"
        android:layout_marginRight="80px"
        android:layout_width="96px"
        android:padding="18px"
        android:layout_height="96px" />



    <LinearLayout
        android:layout_below="@+id/searchBox"
        android:layout_marginTop="36px"
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"></LinearLayout>

    <LinearLayout
        android:layout_below="@+id/searchBox"
        android:layout_marginTop="36px"
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"></LinearLayout>

</RelativeLayout>
