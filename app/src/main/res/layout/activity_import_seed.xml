<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="whc.com.whc_wallet.SplashActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="318px"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60px"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/nameIv"
                    android:layout_width="60px"
                    android:layout_height="60px"
                    android:layout_marginLeft="60px"
                    android:background="@drawable/create_icons_wallet_name" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="24px"
                    android:gravity="center_vertical"
                    android:text="@string/wallet_name"
                    android:textSize="42px" />
            </LinearLayout>

            <EditText
                style="@style/CustomerEditText"
                android:layout_width="match_parent"
                android:layout_marginTop="18px" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="576px"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60px"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="60px"
                    android:layout_height="60px"
                    android:layout_marginLeft="60px"
                    android:background="@drawable/input_icon_word" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="24px"
                    android:gravity="center_vertical"
                    android:text="@string/input_seed"
                    android:textSize="42px" />
            </LinearLayout>

            <EditText
                style="@style/CustomerEditText"
                android:layout_width="match_parent"
                android:layout_height="240px"
                android:layout_marginTop="18px" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="936px"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60px"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/lockIv"
                    android:layout_width="60px"
                    android:layout_height="60px"
                    android:layout_marginLeft="60px"
                    android:background="@drawable/create_icons_password" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="24px"
                    android:gravity="center_vertical"
                    android:text="@string/set_password"
                    android:textSize="42px" />
            </LinearLayout>

            <EditText
                style="@style/CustomerEditText"
                android:layout_marginTop="18px" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1194px"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60px"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    style="@style/tipIv"
                    android:layout_width="60px"
                    android:layout_height="60px"
                    android:layout_marginLeft="60px"
                    android:background="@drawable/create_icons_password2" />

                <TextView
                    style="@style/tipTextV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="24px"
                    android:gravity="center_vertical"
                    android:text="@string/repeat_password"
                    android:textSize="42px" />
            </LinearLayout>

            <EditText
                style="@style/CustomerEditText"
                android:layout_marginTop="18px" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60px"
            android:layout_marginTop="1467px"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <CheckBox
                style="@style/CustomCheckBoxTheme"
                android:layout_width="60px"
                android:layout_height="60px"
                android:layout_marginLeft="60px" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24px"
                android:gravity="center_vertical"
                android:text="@string/read_tip"
                android:textSize="42px" />

            <TextView
                android:id="@+id/service_protocol_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24px"
                android:gravity="center_vertical"
                android:text="@string/service_protocol"
                android:textColor="#ff0c66ff"
                android:textSize="42px" />
        </LinearLayout>

        <TextView
            android:id="@+id/privacy_policy_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="78px"
            android:gravity="center_vertical"
            android:text="@string/privacy_policy"
            android:layout_marginTop="1560px"
            android:textColor="#ff0c66ff"
            android:textSize="42px" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/normal_padding"
            android:layout_marginRight="@dimen/normal_padding"
            android:layout_marginTop="1656px"
            android:background="@drawable/password_tip_bg"
            android:orientation="vertical"
            android:paddingBottom="39px"
            android:paddingLeft="36px"
            android:paddingRight="36px"
            android:paddingTop="39px">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/icons_tip"
                android:drawablePadding="24px"
                android:text="密码用于保护私钥和交易授权强度非常重要" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5px"
                android:drawableLeft="@drawable/icons_tip"
                android:drawablePadding="24px"
                android:text="WHC Wallet 将不会存储您的密码，万一丢失 密码将无法找回或重置密码" />
        </LinearLayout>

        <Button
            style="@style/normalBtn"
            android:text="@string/import_wallet"
            android:layout_marginTop="2025px" />

    </RelativeLayout>
</ScrollView>
