<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="192px"
    android:background="#ffffffff"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/titleLeftIv"
        android:layout_width="72px"
        android:layout_height="72px"
        android:layout_centerVertical="true"
        android:layout_marginLeft="42px"
        android:background="@drawable/create_icons_back" />

    <TextView
        android:id="@+id/titleBarTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="创建钱包"
        android:textColor="#ff030303"
        android:textSize="60px" />


    <ImageView
        android:id="@+id/titleBarRightIv"
        android:layout_width="72px"
        android:layout_height="72px"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="42px"
        />
</RelativeLayout>
